RewriteEngine	on
RewriteBase /tip

RewriteCond %{HTTP_HOST} ^www\.(.*)
RewriteRule (.*) http://%1/tip/$1 [R=301,QSA,NE,L]

RewriteCond %{REQUEST_FILENAME}	^.*\.inc$
RewriteRule ^(.*)$ $1 [F]

RewriteRule ^tip.rss$ index.php?rss=jo [L]
RewriteRule ^tip-img.rss$ tip.xml [R=301,L]
RewriteRule ^tip.xml$ index.php?imgrss=jo [L]
